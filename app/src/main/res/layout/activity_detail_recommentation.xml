<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".DetailRecommentationActivity">

    <ImageButton
        android:id="@+id/back_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Aceptar"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="448dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photoprofile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nami"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:textSize="44dp"/>

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20 aÃ±os"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </LinearLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupInterests"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lectura"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/semi_transparent_black"
            app:chipCornerRadius="50dp"
            app:chipStrokeColor="@android:color/transparent"
            />

        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lectura"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/semi_transparent_black"
            app:chipCornerRadius="50dp"
            app:chipStrokeColor="@android:color/transparent"/>

    </com.google.android.material.chip.ChipGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/icon_career"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/career"
            android:layout_gravity="center"
            />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_career"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estudiante de ingenieria de software"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/icon_location"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/location"
            android:layout_gravity="center"
            />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_sede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UTP - Lima Sur"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/icon_zodiac"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/zodiac"
            android:layout_gravity="center"
            />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_zodiac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Libra"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

        <ImageView
            android:id="@+id/icon_song"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/career"
            android:layout_gravity="center"
            />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/person_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oye mi amor - Mana"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@drawable/square_detail"
            android:textColor="@color/black"
            android:text="Hola soy Nami, blabla blabla blabal blabal blabla blablabla blabalbla blablabla "/>

    </FrameLayout>

</LinearLayout>